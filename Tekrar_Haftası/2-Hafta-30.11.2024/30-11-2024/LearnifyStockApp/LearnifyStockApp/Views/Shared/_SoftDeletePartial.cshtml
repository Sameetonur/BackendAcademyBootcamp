@model CategoryViewModel
@{
    var item = Model;
}
<!-- Çöp kutusu butonu -->
<a title="Çöp kutusuna göndermek için tıklayınız" class="btn btn-icon btn-round btn-info" data-bs-toggle="modal"
    data-bs-target="#trash-modal-@item.Id">
    <i class="fa fa-trash"></i>
</a>

<!-- Çöp kutusu Modal -->
<div class="modal fade" id="trash-modal-@item.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @item.Name kategorisini çöp kutusuna göndermek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>
                <a asp-area="" asp-controller="Category" asp-action="SoftDelete" asp-route-id="@item.Id"
                    class="btn btn-danger">Evet</a>
            </div>
        </div>
    </div>
</div>