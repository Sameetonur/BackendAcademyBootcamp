@model Kisi 
@{
    ViewData["Title"] = "Index";
    
}

<div class="container" style="display: flex; justify-content: center;">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <!-- Solda tam kapsayıcı resim -->
                <img src="@Model.KisiFotoUrl" class="img-fluid rounded-start" alt="..."
                    style="height: 100%; object-fit: cover;">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Ad @Model.Soyad</h5>
                    <p class="card-text">@Model.Hakkımda</p>
                    <p class="card-text"><small class="text-muted">@DateTime.Now</small></p>
                </div>
            </div>
        </div>
    </div>
</div>
